<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.QuotesActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Hello World!"
            android:id="@+id/tvQuote"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintWidth_percent="0.7"
              app:layout_constraintTop_toBottomOf="@+id/tvQuote"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:id="@+id/etQuote"
              android:hint="Quote"
              app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintWidth_percent="0.7"
              app:layout_constraintTop_toBottomOf="@+id/etQuote"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:id="@+id/etAuthor"
              android:hint="Author"
              app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/btnAddQuote"
            android:layout_width="0dp"
            android:text="Add Quote"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/etAuthor"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/tvQuote"
            app:layout_constraintLeft_toRightOf="@+id/etQuote"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>